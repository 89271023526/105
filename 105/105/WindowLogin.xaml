<Window x:Class="_105.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_105"
        mc:Ignorable="d"
        Title="WindowLogin" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="38" HorizontalAlignment="Center" VerticalAlignment="Center">Имя</TextBlock>
        <TextBox x:Name="ttt" Grid.Row="0" Grid.Column="1" FontSize="38" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
        <Button Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Click="Button_Click">Вход</Button>
       
    </Grid>
</Window>
